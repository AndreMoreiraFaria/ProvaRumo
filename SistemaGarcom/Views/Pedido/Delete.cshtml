@model SistemaGarcom.Models.Pedido

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h4>Tem certeza que deseja apagar o pedido?</h4>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
           Prato
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prato)
        </dd>

        <dt>
           Bebida
        </dt>

        <dd>
            @Html.DisplayFor(model => model.bebida)
        </dd>

        <dt>
      Quantidade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantidade)
        </dd>

        <dt>
       Mesa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mesa)
        </dd>

        <dt>
Nome do Cliente
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomeCliente)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Voltar", "Index", "", "", htmlAttributes: new { @class = "btn btn-primary" })
            <input type="submit" value="Deletar" class="btn btn-danger" />           
        </div>
    }
</div>
