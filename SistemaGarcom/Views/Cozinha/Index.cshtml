@model IEnumerable<SistemaGarcom.Models.Pedido>

@{
    ViewBag.Title = "Cozinha";
}

<h2>Pratos</h2>

<table class="table  table-hover ">
    <thead class="thead-dark">
        <tr>
            <th>
                Prato
            </th>
            <th>
                Mesa
            </th>
            <th>
                Nome do Cliente
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.prato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mesa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nomeCliente)
                </td>
                <td></td>
            </tr>
        }

</table>
